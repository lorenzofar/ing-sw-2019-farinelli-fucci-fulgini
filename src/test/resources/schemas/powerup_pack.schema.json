{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "powerups.schema.json",
  "title" : "Powerup Pack",
  "type" : "object",
  "definitions": {
    "powerupType": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id", "name", "description"]
    },
    "cubeColor": {
      "type": "string",
      "enum": ["RED", "YELLOW", "BLUE"]
    }
  },
  "properties": {
    "types": {
      "description": "Define the different types of powerups",
      "type": "array",
      "items": {
        "$ref": "#/definitions/powerupType"
      }
    },
    "deck": {
      "description": "Describes how the powerup deck is composed",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "description": "Id of the powerupType",
            "type": "string",
            "minLength": 1
          },
          "color": {
            "$ref": "#/definitions/cubeColor"
          },
          "count": {
            "description": "How many of these will there be in the deck?",
            "type": "integer",
            "minimum": 1
          }
        }
      }
    }
  }
}