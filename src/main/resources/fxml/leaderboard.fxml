<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>

<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="it.polimi.deib.se2019.sanp4.adrenaline.client.gui.LeaderboardController"
       stylesheets="@style.css">

    <VBox styleClass="dark-background"
          spacing="8">

        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>

        <Label styleClass="title-text" text="Final scores"/>
        <Label text="The match is over, here is the final leaderboard"/>

        <VBox fx:id="leaderBoardContainer" spacing="12">
            <padding>
                <Insets top="12"/>
            </padding>
        </VBox>

    </VBox>

</Scene>